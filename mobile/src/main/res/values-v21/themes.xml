<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
                <!-- ToolBarの背景色 -->
                <item name="colorPrimary">#482f73</item>
                <item name="colorPrimaryDark">#93bad5</item>
                <!-- ToolBarのタイトルテキスト色 -->
                <item name="android:textColorPrimary">#ffffff</item>
                <!-- ToolBarのオプションメニューのOverflowアイコンの色 -->
                <item name="android:textColorSecondary">#ffffff</item>
                <item name="windowActionModeOverlay">true</item>
                <item name="android:windowBackground">@null</item>

                <item name="colorAccent">#93bad5</item>
                <item name="android:navigationBarColor">@color/sub_color_2_sleep</item>

        </style>

        <!-- ポップアップメニューのテーマ -->
        <style name="PopThemeStyle" parent="@style/ThemeOverlay.AppCompat.Light">
                <!-- 文字色 -->
                <item name="android:textColorPrimary">@color/text_color_1_sleep</item>

                <!-- 背景色 -->
                <item name="android:background">@color/sub_color_2_sleep</item>
        </style>
</resources>