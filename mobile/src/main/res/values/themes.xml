<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- ToolBarの背景色 -->
        <item name="colorPrimary">#482f73</item>
        <item name="colorPrimaryDark">#482f73</item>
        <!-- ToolBarのタイトルテキスト色 -->
        <item name="android:textColorPrimary">#ffffff</item>
        <!-- ToolBarのオプションメニューのOverflowアイコンの色 -->
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@null</item>

        <item name="android:navigationBarColor">@color/sub_color_2_sleep</item>

    </style>

    <!-- ポップアップメニューのテーマ -->
    <style name="PopThemeStyle" parent="Base.ThemeOverlay.AppCompat">
        <!-- 文字色 -->
        <item name="android:textColorPrimary">@color/text_color_2_lesson</item>

        <!-- 背景色 -->
        <item name="android:background">@color/sub_color_2_sleep</item>
    </style>

</resources>