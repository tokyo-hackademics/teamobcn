<resources>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- ToolBarの背景色 -->
        <item name="colorPrimary">#800080</item>
        <item name="colorPrimaryDark">#0000ff</item>
        <!-- ToolBarのタイトルテキスト色 -->
